doctype html
html(lang='en')
  head
    title Book Trading Club
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="Book Trading Club. Come in and add your collection and share with anybody now.")
    meta(name="author", content="Huy Tran")
    link(href="/stylesheets/bootstrap.css", rel="stylesheet")
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Book Trading Club
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if !user
              li
                a(href="/books/allbooks") View Books
            form.navbar-form.navbar-right(method='post', action='/users/login')
              if !user
                .form-group
                  input.form-control(name="username", type="text", placeholder="Username")
                .form-group
                  input.form-control(name="password", type="password", placeholder="Password")
                button.btn.btn-success(name="submit", type="submit", id="layoutsigninbtn") Sign in
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout
              li
                a(href="/books/mybooks") My Books
              li
                a(href="/books/allbooks") View Books
              li
                a(href="/books/requests") Requests
              li
                a(href="/users/profile") Profile
        .content
        != messages()
  block content

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/javascripts/bootstrap.js')
